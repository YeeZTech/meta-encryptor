{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
// tsc -b ./tsconfig.json